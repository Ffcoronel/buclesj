String estacion = "verano";

String obtenerEstacion(String estacion) {
    String mensaje = "";
    switch (estacion) {
        case "primavera":
            mensaje = "Estamos en primavera.";
            break;
        case "verano":
            mensaje = "Estamos en verano.";
            break;
        case "oto침o":
            mensaje = "Estamos en oto침o.";
            break;
        case "invierno":
            mensaje = "Estamos en invierno.";
            break;
        default:
            mensaje = "Esto no es una estaci칩n v치lida.";
            break;
    }
    return mensaje;
}

System.out.println(obtenerEstacion(estacion));
